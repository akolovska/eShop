@model eShop.Domain.DTO.AddToShoppingCartDTO

@{
    ViewData["Title"] = "AddProductToCart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
	<h1>Add Product to Cart</h1>

    <form method="post" asp-action="AddProductToCart">

        <input type="hidden" asp-for="ProductId" value="@Model.ProductId" class="form-control" />

        <div class="row mt-4">
            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <input disabled="disabled" asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
        </div>

        <div class="row mt-4">
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" type="number" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
        </div>

        <div class="row mt-4">
            <button type="submit" class="btn btn-success">Add To Cart</button>
        </div>
    </form>

</div>
